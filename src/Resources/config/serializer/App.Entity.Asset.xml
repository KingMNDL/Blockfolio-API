        <property name="id"
                  type="integer"
                  groups="Get"/>

        <property name="label"
                  type="string"
                  groups="Get,Create,Update"/>

        <property name="value"
                  type="float"
                  groups="Get,Create,Update"/>

        <property name="currency"
